@model PagedList.IPagedList<AppPet.MVC.Models.Cliente>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gerenciar Cliente</h2>


<p>
    <button onclick="document.location.href = 'http://localhost:51778/Cliente/Create'" type="button" class="btn btn-primary">
        <span class="glyphicon glyphicon-file"></span> Novo Registro
    </button>
</p>
@using (Html.BeginForm("Index", "Cliente", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-6">
            Palavra-chave: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control-custom" }) <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Pesquisar</button>
        </div>
        <div class="col-md-4">
            Itens por página: @Html.TextBox("pages", "3", htmlAttributes: new { @class = "form-control-custom", @type = "number", @style = "width:60px" })
        </div>
    </div>
}
<br />
<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr style="background-color:#f5d3e9">
        <th>
			@Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Telefone", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Celular", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Facebook", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("DtNascimento", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Cep", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Endereco", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Numero", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Complemento", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Bairro", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Cidade", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Uf", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th>
			@Html.ActionLink("Descricao", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages })
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Facebook)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DtNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cep)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Complemento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bairro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Uf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
		 <button title="Editar" onclick="document.location.href = 'http://localhost:51778/Cliente/Edit/' + @item.ClienteId" ty type="button" class="btn btn-primary btn-xs">
           <span class="glyphicon glyphicon-pencil"></span>
         </button>
         <button title="Detalhes" onclick="document.location.href = 'http://localhost:51778/Cliente/Details/' + @item.ClienteId" ty type="button" class="btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-list-alt"></span>
         </button>
         <button title="Excluir" onclick="document.location.href = 'http://localhost:51778/Cliente/Delete/' + @item.ClienteId" ty type="button" class="btn btn-primary btn-xs">
             <span class="glyphicon glyphicon-trash"></span>
         </button>
        </td>
    </tr>
}
    </tbody>
</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, pages = ViewBag.pages }))
